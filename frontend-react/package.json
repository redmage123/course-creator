{
  "name": "frontend-react",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:full": "tsc -b && vite build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css}\"",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "type-check": "tsc --noEmit",
    "audit:ui": "node scripts/ui-ux-audit.js",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "cypress:run:chrome": "cypress run --browser chrome",
    "cypress:run:firefox": "cypress run --browser firefox",
    "cypress:run:edge": "cypress run --browser edge",
    "test:e2e": "cypress run --spec 'cypress/e2e/**/*.cy.ts'",
    "test:e2e:headed": "cypress run --headed --spec 'cypress/e2e/**/*.cy.ts'",
    "test:e2e:critical": "cypress run --spec 'cypress/e2e/critical-paths/**/*.cy.ts'",
    "test:e2e:auth": "cypress run --spec 'cypress/e2e/auth/**/*.cy.ts'",
    "test:e2e:student": "cypress run --spec 'cypress/e2e/student/**/*.cy.ts'",
    "test:e2e:instructor": "cypress run --spec 'cypress/e2e/instructor/**/*.cy.ts'",
    "test:e2e:org-admin": "cypress run --spec 'cypress/e2e/org-admin/**/*.cy.ts'",
    "test:e2e:site-admin": "cypress run --spec 'cypress/e2e/site-admin/**/*.cy.ts'",
    "test:e2e:mobile": "cypress run --config viewportWidth=375,viewportHeight=667",
    "test:e2e:tablet": "cypress run --config viewportWidth=768,viewportHeight=1024",
    "test:e2e:desktop": "cypress run --config viewportWidth=1920,viewportHeight=1080",
    "test:e2e:record": "cypress run --record --key $CYPRESS_RECORD_KEY",
    "test:e2e:parallel": "cypress run --parallel --record --key $CYPRESS_RECORD_KEY",
    "test:all": "npm run test && npm run test:e2e"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@monaco-editor/react": "^4.7.0",
    "@reduxjs/toolkit": "^2.10.1",
    "@tanstack/react-query": "^5.90.6",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-web-links": "^0.11.0",
    "@xterm/xterm": "^5.5.0",
    "axios": "^1.13.2",
    "chart.js": "^4.5.1",
    "react": "^19.1.1",
    "react-chartjs-2": "^5.3.1",
    "react-dom": "^19.1.1",
    "react-helmet-async": "^2.0.5",
    "react-hook-form": "^7.66.0",
    "react-redux": "^9.2.0",
    "react-router-dom": "^7.9.5",
    "zod": "^4.1.12",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@axe-core/react": "^4.11.0",
    "@eslint/js": "^9.36.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.6.0",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "@vitest/ui": "^4.0.7",
    "axe-core": "^4.11.0",
    "cypress": "^15.5.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "jsdom": "^27.1.0",
    "lighthouse": "^13.0.1",
    "prettier": "^3.6.2",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite": "^7.1.7",
    "vitest": "^4.0.7"
  }
}
