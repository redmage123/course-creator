{
  "name": "course-creator",
  "version": "1.0.0",
  "description": "Course Creator Platform with comprehensive testing",
  "main": "index.js",
  "scripts": {
    "start": "python -m http.server 8080 --directory frontend",
    "dev": "python -m http.server 8080 --directory frontend",
    "build": "echo 'Static frontend - no build needed'",
    "test:frontend": "python -m pytest tests/frontend/ -v",
    "test:frontend:smoke": "python -m pytest tests/frontend/ -m smoke -v",
    "test:frontend:regression": "python -m pytest tests/frontend/ -m regression -v",
    "test:frontend:auth": "python -m pytest tests/frontend/ -m auth -v",
    "test:frontend:javascript": "python -m pytest tests/frontend/ -m javascript -v",
    "test:frontend:e2e": "python -m pytest tests/frontend/ -m e2e -v",
    "test:frontend:responsive": "python -m pytest tests/frontend/ -m responsive -v",
    "test:frontend:headless": "HEADLESS=1 python -m pytest tests/frontend/ -v",
    "test:backend": "python -m pytest tests/unit/ tests/integration/ -v",
    "test:api": "python -m pytest tests/integration/test_api_integration.py -v",
    "test:all": "npm run test:backend && npm run test:frontend",
    "test:unit": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:chrome": "playwright test --project=chromium",
    "test:e2e:firefox": "playwright test --project=firefox",
    "test:e2e:safari": "playwright test --project=webkit",
    "test:e2e:headed": "playwright test --headed",
    "test:selenium": "python -m pytest tests/frontend/ -m selenium -v",
    "test:puppeteer": "node tests/puppeteer/run-tests.js",
    "test:visual": "playwright test --project=visual-regression",
    "test:accessibility": "playwright test --project=accessibility",
    "test:performance": "playwright test --project=performance",
    "test:mobile": "playwright test --project=mobile",
    "test:cross-browser": "npm run test:e2e:chrome && npm run test:e2e:firefox && npm run test:e2e:safari",
    "test:ci": "cross-env CI=true npm run test:unit && npm run test:e2e",
    "test:coverage": "jest --coverage --coverageDirectory=coverage",
    "test:coverage:open": "npm run test:coverage && open coverage/lcov-report/index.html",
    "test:watch": "jest --watch",
    "test:debug": "jest --detectOpenHandles --runInBand",
    "test:organization": "jest tests/frontend/test_organization_registration_frontend.js --verbose",
    "test:organization:watch": "jest tests/frontend/test_organization_registration_frontend.js --watch",
    "test:organization:coverage": "jest tests/frontend/test_organization_registration_frontend.js --coverage",
    "lint": "eslint frontend/js/**/*.js",
    "lint:fix": "eslint frontend/js/**/*.js --fix",
    "lint:css": "stylelint frontend/css/**/*.css",
    "format": "prettier --write 'frontend/**/*.{js,css,html}'"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@hookform/resolvers": "^5.1.1",
    "@mui/icons-material": "^7.2.0",
    "@mui/material": "^7.2.0",
    "@types/react-router-dom": "^5.3.3",
    "axios": "^1.10.0",
    "lucide-react": "^0.525.0",
    "react-hook-form": "^7.59.0",
    "react-router-dom": "^7.6.3",
    "tailwindcss": "^4.1.11",
    "yup": "^1.6.1"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@playwright/test": "^1.40.0",
    "@testing-library/dom": "^9.3.3",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/user-event": "^14.5.1",
    "babel-jest": "^30.0.4",
    "eslint": "^8.55.0",
    "http-server": "^14.1.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^23.0.1",
    "playwright": "^1.40.0",
    "stylelint-config-standard": "^39.0.0",
    "@testing-library/react": "^13.4.0",
    "jest-extended": "^4.0.2",
    "jest-watch-typeahead": "^2.2.2",
    "jest-environment-node": "^29.7.0",
    "jest-junit": "^16.0.0",
    "supertest": "^6.3.3",
    "cross-env": "^7.0.3",
    "wait-on": "^7.2.0",
    "start-server-and-test": "^2.0.3",
    "puppeteer": "^21.5.2",
    "selenium-webdriver": "^4.15.0",
    "webdriverio": "^8.24.12",
    "@wdio/cli": "^8.24.12",
    "@wdio/local-runner": "^8.24.12",
    "@wdio/mocha-framework": "^8.24.12",
    "@wdio/spec-reporter": "^8.24.12",
    "nyc": "^15.1.0",
    "c8": "^8.0.1",
    "prettier": "^3.1.0",
    "stylelint": "^16.23.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js",
      "<rootDir>/tests/frontend/setup.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js",
      "!**/tests/e2e/**"
    ],
    "collectCoverageFrom": [
      "frontend/js/**/*.js",
      "!frontend/js/**/*.test.js",
      "!frontend/js/**/*.spec.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "moduleNameMapper": {
      "\\.(css|less|scss|sass)$": "identity-obj-proxy"
    },
    "transform": {
      "^.+\\.js$": "babel-jest"
    }
  }
}
