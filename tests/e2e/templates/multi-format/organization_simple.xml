        <objective>Implement authentication and authorization</objective>
      </learningObjectives>
      <durationWeeks>6</durationWeeks>
      <difficulty>intermediate</difficulty>
      <maxStudents>30</maxStudents>
    </track>
  </tracks>

  <!-- Courses -->
  <courses>
    <!-- Frontend Development Track Courses -->
    <course trackName="Frontend Development">
