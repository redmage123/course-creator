{
  "name": "course-management",
  "description": "Core service for creating, managing, and organizing courses with metadata, structure, and content organization",
  "port": 8001,
  "endpoints": [
    {
      "name": "courses",
      "path": "/courses",
      "method": "GET",
      "description": "List all courses with pagination and filtering"
    },
    {
      "name": "create_course",
      "path": "/courses",
      "method": "POST", 
      "description": "Create a new course"
    },
    {
      "name": "get_course",
      "path": "/courses/{course_id}",
      "method": "GET",
      "description": "Get course details by ID"
    },
    {
      "name": "update_course",
      "path": "/courses/{course_id}",
      "method": "PUT",
      "description": "Update course details"
    },
    {
      "name": "delete_course",
      "path": "/courses/{course_id}",
      "method": "DELETE",
      "description": "Delete a course"
    },
    {
      "name": "course_lessons",
      "path": "/courses/{course_id}/lessons",
      "method": "GET",
      "description": "List lessons in a course"
    },
    {
      "name": "add_lesson",
      "path": "/courses/{course_id}/lessons",
      "method": "POST",
      "description": "Add a lesson to a course"
    },
    {
      "name": "get_lesson",
      "path": "/lessons/{lesson_id}",
      "method": "GET",
      "description": "Get lesson details"
    },
    {
      "name": "update_lesson",
      "path": "/lessons/{lesson_id}",
      "method": "PUT",
      "description": "Update lesson details"
    },
    {
      "name": "delete_lesson",
      "path": "/lessons/{lesson_id}",
      "method": "DELETE",
      "description": "Delete a lesson"
    },
    {
      "name": "publish_course",
      "path": "/courses/{course_id}/publish",
      "method": "POST",
      "description": "Publish a course"
    }
  ],
  "dependencies": [
    "fastapi>=0.104.0",
    "uvicorn>=0.24.0",
    "sqlalchemy>=2.0.0",
    "asyncpg>=0.29.0"
  ],
  "database_models": [
    {
      "name": "Course",
      "fields": [
        {"name": "id", "type": "UUID", "primary_key": true},
        {"name": "title", "type": "String", "nullable": false},
        {"name": "description", "type": "Text"},
        {"name": "instructor_id", "type": "UUID", "nullable": false},
        {"name": "category", "type": "String"},
        {"name": "difficulty_level", "type": "String"},
        {"name": "is_published", "type": "Boolean", "default": false},
        {"name": "created_at", "type": "DateTime"},
        {"name": "updated_at", "type": "DateTime"}
      ]
    },
    {
      "name": "Lesson",
      "fields": [
        {"name": "id", "type": "UUID", "primary_key": true},
        {"name": "course_id", "type": "UUID", "nullable": false},
        {"name": "title", "type": "String", "nullable": false},
        {"name": "content", "type": "Text"},
        {"name": "order_index", "type": "Integer"},
        {"name": "duration_minutes", "type": "Integer"},
        {"name": "lesson_type", "type": "String"},
        {"name": "created_at", "type": "DateTime"},
        {"name": "updated_at", "type": "DateTime"}
      ]
    }
  ],
  "async_tasks": [],
  "websocket_endpoints": [],
  "middleware": ["logging", "cors"]
}
