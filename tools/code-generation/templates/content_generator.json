{
    "name": "content-generator",
    "description": "AI-Powered Content Generation Service",
    "port": 8001,
    "endpoints": [
        {
            "name": "outline",
            "routes": [
                {
                    "method": "POST",
                    "path": "/outlines",
                    "function_name": "generate_outline",
                    "description": "Generate course outline using AI",
                    "return_type": "Dict[str, Any]",
                    "body_param": {"name": "request", "type": "OutlineGenerationRequest"}
                },
                {
                    "method": "GET",
                    "path": "/outlines/{outline_id}",
                    "function_name": "get_outline",
                    "description": "Get generated outline by ID",
                    "return_type": "Dict[str, Any]",
                    "path_params": [{"name": "outline_id", "type": "str"}]
                }
            ]
        }
    ],
    "dependencies": [
        "anthropic>=0.8.0",
        "tiktoken>=0.5.0"
    ],
    "database_models": [
        {
            "name": "GenerationRequest",
            "description": "Content generation request tracking",
            "fields": [
                {"name": "request_type", "type": "str", "nullable": false},
                {"name": "input_data", "type": "Dict[str, Any]", "nullable": false},
                {"name": "status", "type": "str", "default": "'pending'"}
            ]
        }
    ],
    "async_tasks": [],
    "websocket_endpoints": [],
    "middleware": ["logging", "timing"]
}
