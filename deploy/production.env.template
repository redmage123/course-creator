# Course Creator Platform - Production Environment Template
# Copy this file to .env.production and configure your values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=course_creator
DB_USER=course_creator
DB_PASSWORD=your_secure_database_password_here

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_SSL=false

# =============================================================================
# JWT AND SECURITY
# =============================================================================
JWT_SECRET_KEY=your_jwt_secret_key_minimum_64_characters_long_for_production_security
ENCRYPTION_KEY=your_encryption_key_32_characters_minimum_for_aes_encryption

# =============================================================================
# AI SERVICE CONFIGURATION
# =============================================================================
# Anthropic Claude API
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# OpenAI API (fallback)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
SMTP_HOST=your_smtp_server.com
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASSWORD=your_smtp_password
SMTP_USE_TLS=true
FROM_EMAIL=noreply@yourdomain.com

# =============================================================================
# DOMAIN AND SSL
# =============================================================================
DOMAIN_NAME=yourdomain.com
SSL_CERT_PATH=/etc/letsencrypt/live/yourdomain.com/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/yourdomain.com/privkey.pem

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
ALLOWED_ORIGINS=["https://yourdomain.com","https://www.yourdomain.com"]
CORS_ALLOW_CREDENTIALS=true

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
MAX_FILE_SIZE=52428800  # 50MB in bytes
UPLOAD_PATH=/opt/course-creator/uploads
ALLOWED_EXTENSIONS=[".pdf",".docx",".pptx",".txt",".json",".csv",".zip"]

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=structured
LOG_PATH=/var/log/course-creator
SENTRY_DSN=your_sentry_dsn_for_error_tracking

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
PROMETHEUS_ENABLED=true
METRICS_ENDPOINT=/metrics
HEALTH_CHECK_ENABLED=true

# =============================================================================
# RATE LIMITING CONFIGURATION (Production Values)
# =============================================================================
RATE_LIMITING_ENABLED=true
RATE_LIMITING_REDIS_BACKEND=true

# Authentication endpoints (strict limits for security)
AUTH_LOGIN_RATE_LIMIT=5  # requests per minute
AUTH_REGISTER_RATE_LIMIT=3  # requests per 5 minutes

# API endpoints
API_READ_RATE_LIMIT=100  # requests per minute
API_WRITE_RATE_LIMIT=30  # requests per minute
ADMIN_RATE_LIMIT=10  # requests per minute

# File operations
FILE_UPLOAD_RATE_LIMIT=5  # requests per minute

# =============================================================================
# SECURITY HEADERS CONFIGURATION
# =============================================================================
SECURITY_HEADERS_ENABLED=true
STRICT_CSP=true
HSTS_ENABLED=true
HSTS_MAX_AGE=31536000  # 1 year

# Content Security Policy
CSP_DEFAULT_SRC="'self'"
CSP_SCRIPT_SRC="'self'"
CSP_STYLE_SRC="'self' 'unsafe-inline'"
CSP_IMG_SRC="'self' data: blob:"
CSP_FONT_SRC="'self' data:"
CSP_CONNECT_SRC="'self'"

# =============================================================================
# SESSION CONFIGURATION
# =============================================================================
SESSION_TIMEOUT=28800  # 8 hours in seconds
SESSION_SECURE=true
SESSION_HTTPONLY=true
SESSION_SAMESITE=strict

# =============================================================================
# INTEGRATION CONFIGURATION
# =============================================================================
# Microsoft Teams Integration
TEAMS_CLIENT_ID=your_teams_client_id
TEAMS_CLIENT_SECRET=your_teams_client_secret
TEAMS_TENANT_ID=your_teams_tenant_id

# Zoom Integration
ZOOM_API_KEY=your_zoom_api_key
ZOOM_API_SECRET=your_zoom_api_secret

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_ENABLED=true
BACKUP_PATH=/opt/course-creator/backups
BACKUP_RETENTION_DAYS=30
DATABASE_BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM

# =============================================================================
# DOCKER CONFIGURATION (if using Docker deployment)
# =============================================================================
DOCKER_REGISTRY=your_docker_registry.com
DOCKER_TAG=latest
COMPOSE_PROJECT_NAME=course-creator

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
WORKERS_PER_SERVICE=4
MAX_CONNECTIONS=100
CONNECTION_POOL_SIZE=20
CACHE_TTL=3600  # 1 hour

# =============================================================================
# DEVELOPMENT OVERRIDES (set to false in production)
# =============================================================================
DEBUG=false
DEVELOPMENT_MODE=false
API_DOCS_ENABLED=false
REDOC_ENABLED=false